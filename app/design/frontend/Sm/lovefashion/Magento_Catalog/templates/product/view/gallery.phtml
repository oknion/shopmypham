								breakpoint:480,
								settings: {
									item:2,
									verticalHeight: 190,
									slideMove:1
								  }
							}
						]
					<?php }
				} ?>
				
				<?php if($detailStyle == 'detail-2' || $detailStyle == 'detail-3'){ // DETAIL STYLE 2, 3
					if($thumsStyle == 'horizontal'){?>
						vertical: false,
						item:4,
						slideMargin: 10,
						responsive : [
							{
								breakpoint:800,
								settings: {
									item:3,
									slideMove:1,
