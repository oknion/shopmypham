<?xml version="1.0"?>
<config>
	<global>
		<models>
            <quickview>
                <class>Vt_Quickview_Model</class>
            </quickview>
        </models>
		<blocks>
            <quickview>
                <class>Vt_Quickview_Block</class>
            </quickview>
        </blocks>
		<helpers>
            <quickview>
                <class>Vt_Quickview_Helper</class>
            </quickview>
        </helpers>
        <resources>
        	<quickview_setup>
        		<setup>
        			<module>Vt_Quickview</module>
        		</setup>
        	</quickview_setup>
        </resources>
	</global>
	<frontend>
        <routers>
			<quickview>
                <use>standard</use>
                <args>
                    <module>Vt_Quickview</module>
                    <frontName>quickview</frontName>
                </args>
            </quickview>
        </routers>
		<layout>
            <updates>
                <quickview module="Vt_Quickview">
					<file>vt/quickview.xml</file>
                </quickview>
            </updates>
        </layout>
        <translate>
      		<modules>
          		<Vt_Quickview>
                     <files>
                          <default>Vt_Quickview.csv</default>
                     </files>
                </Vt_Quickview>
            </modules>
        </translate>
	</frontend>
	<adminhtml>
        <translate>
      		<modules>
          		<Vt_Quickview>
                     <files>
                          <default>Vt_Quickview.csv</default>
                     </files>
                </Vt_Quickview>
            </modules>
        </translate>
