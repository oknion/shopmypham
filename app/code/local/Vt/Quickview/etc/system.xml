<?xml version="1.0"?>
<config>
	<tabs>
        <vt>
            <label>VTTheme.com</label>
            <sort_order>250</sort_order>
        </vt>
    </tabs>
    <sections>
        <quickview translate="label" module="quickview">
            <label>VT Quickview</label>
            <tab>vt</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                    	<enable>
                            <label>Enable Quickview Module</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model> 
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                    	</enable>

						<selector_qv translate="label">
                            <label>The selectors is wrap of quickview link</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>They contain links to the product pages(example: .products-grid li.item, .products-list li.item)
                            .It would be better if they have css position is relative
                            </comment>
                        </selector_qv>
                        <popup_width translate="label">
                            <label>Popup Width</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>29</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>unit is pixel/percent</comment>
                        </popup_width>
						<popup_height translate="label">
                            <label>Popup Height</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>unit is pixel/percent</comment>
                        </popup_height>
                    </fields>
                </general>
            </groups>
        </quickview>
    </sections>
</config>
